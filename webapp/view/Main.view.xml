<mvc:View
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tinyapp="tinyapp.controls"
	controllerName="tinyapp.controller.Main"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
        <Page title="The Tiny App">
        	<IconTabBar expandable="false">
        		<items>
		        	<IconTabFilter
						text="Step 1">
						<core:Fragment fragmentName="tinyapp.view.Step1" type="XML"/>
					</IconTabFilter>
					<IconTabFilter
						text="Step 2">
						<core:Fragment fragmentName="tinyapp.view.Step2" type="XML"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
			<footer>
				<Toolbar>
					<Button
						icon="sap-icon://message-popup" type="Emphasized"
						text="{=${messages>/}.length}"
						visible="{=!!${message>/}.length}"
						press="onMessageButtonPress"/>
					<tinyapp:MessageButton
						text="Extended Button">
						<tinyapp:messagePopover>
							<MessagePopover items="{messages>/}">
								<items>
									<MessageItem
										description="{messages>description}"
										type="{messages>type}"
										title="{messages>message}"/>
								</items>
							</MessagePopover>
						</tinyapp:messagePopover>
					</tinyapp:MessageButton>
				</Toolbar>
			</footer>
        </Page>
    </App>
</mvc:View>