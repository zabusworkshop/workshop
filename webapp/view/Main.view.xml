<mvc:View
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="tinyapp.controller.Main"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
        <Page title="The Tiny App">
            <List
            	mode="SingleSelectLeft"
            	selectionChange="onListSelectionChange"
            	items="{path: 'viewModel>/cities'}">
            	<headerToolbar>
	        		<Toolbar>
	        			<Title  id="title" text="Welcome to {viewModel>name}!"/>
	        		</Toolbar>
	        	</headerToolbar>
            	<items>
            		<StandardListItem title="{viewModel>name}"/>
            	</items>
            </List>
        </Page>
    </App>
</mvc:View>